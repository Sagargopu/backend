# Production Environment Variables for GCP Deployment
# Copy this file to .env and update with your actual values

# Database Configuration (Cloud SQL)
DATABASE_URL=postgresql://username:password@/database_name?host=/cloudsql/project-id:region:instance-name

# Alternative format for external IP connection
# DATABASE_URL=postgresql://username:password@external-ip:5432/database_name

# Application Settings
ENVIRONMENT=production
DEBUG=False
ALLOWED_HOSTS=*

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# CORS Settings
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Google Cloud Settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/opt/buildbuzz/backend/service-account-key.json

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Settings
WORKERS=4
HOST=0.0.0.0
PORT=8000

# Upload Settings
MAX_UPLOAD_SIZE=100MB
UPLOAD_PATH=/opt/buildbuzz/uploads

# Cache Settings (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Email Settings (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring (if using)
SENTRY_DSN=your-sentry-dsn-url